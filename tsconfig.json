{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "files": [
    "src/common-types.ts",
    "src/default-loader.ts",
    "src/index.ts",
    "src/observable_pouch.ts",
    "src/loader/couch-attachment-loader.ts",
    "src/loader/couch-observable-loader.ts",
    "src/loader/factory-loader.ts",
    "src/loader/require-loader.ts"
  ]
}